<p id="notice"><%= notice %></p>

<h1><%= t('Users') %></h1>

<table class="table">
  <thead>
    <tr>
      <th>Admin</th>
      <th><%= t('Name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.admin %></td>
        <td><%= user.name %></td>
        <td><%= link_to t('show'), user %></td>
        <% if can? :edit, User %>
          <td><%= link_to t('edit'), edit_user_path(user) %></td>
        <% end %>
        <% if can? :destroy, User %>
          <td><%= link_to t('destroy'), user, method: :delete, data: { confirm: t('Are you sure?') } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, User %>
  <%= link_to t('new'), new_user_path %>
<% end %>